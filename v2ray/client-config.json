// 客户端配置
// 适用于指定域名走v2ray-server，默认直连，提高效率
{
    "log": {
        "loglevel": "warning",   
        "access": "/var/log/v2ray_access.log", 
        "error": "/var/log/v2ray_error.log"
     },
    "inbounds": [
          {
          "port": 1080, 
          "protocol": "socks",
          "sniffing": {
            "enabled": true,
            "destOverride": ["http", "tls"]
            },
          "settings": {
            "auth": "noauth",
            "udp": true,
            "ip": "127.0.0.1"
            }
        }],
    "outbounds": [
    {
        "protocol": "vmess", 
        "settings": {
        "vnext": [{
            "address": "server-ip-doname", 
            "port": 30000, 
            "users": [{
                "id": "11f98504-f22a-4665-b617-af52ed4c4e15",
                "alterId": 64 }]  
          }]
      },
      "tag": "out_v2ray_server" 
      },
      {
        "protocol": "freedom",
        //"tag": "direct_connect",   // 取消tag表示所有默认出口
        "settings": {}
      },
      {
        "protocol": "blackhole",
        "settings": {},
        "tag": "blackhole_drop"
      }
    ],
    "routing": {
        "domainStrategy": "IPOnDemand",
        "rules": [  
            {
            "type": "field",
            "outboundTag": "blackhole_drop",
            "domain": [
                // 个人常用国外域名,格式 "domain:",
                "domain:google.com.hk",    
                "domain:github.com",
                "domain:github.io",
                "domain:amazon.com",
                "domain:youtube.com",
                "domain:wikipedia.org",
                "domain:v2ray.com"
                ]
            }]
      }, 
    "mux": {"enabled": true}
}
