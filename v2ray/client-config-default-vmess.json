// 客户端配置
// 适用于默认走vmess服务器，仅指定规则的 国内域名或IP freedom直连，效率低
{
    "log": {
        "loglevel": "warning",   
        "access": "/var/log/v2ray_access.log", 
        "error": "/var/log/v2ray_error.log"
     },
    "inbounds": [
          {
          "port": 1080, 
          "protocol": "socks",
          "sniffing": {
            "enabled": true,
            "destOverride": ["http", "tls"]
            },
          "settings": {
            "auth": "noauth",
            "udp": true,
            "ip": "127.0.0.1"
            }
        }],
    "outbounds": [
    {
        "protocol": "vmess", 
        "settings": {
        "vnext": [{
            "address": "server-ip-doname", 
            "port": 30000, 
            "users": [{
                "id": "11f98504-f22a-4665-b617-af52ed4c4e15",
                "alterId": 64 }]  
          }]
        }
    },
    {
        "protocol": "freedom",
        "settings": {},
        "tag": "direct_connect" 
    },
    {
        "protocol": "blackhole",
        "settings": {},
        "tag": "blackhole_drop"
    }],
    "routing": {
        "domainStrategy": "IPOnDemand",
        "rules": [  
            {
            "type": "field",
            "outboundTag": "blackhole_drop",
            "domain": [
                "domain:qq.com",            // 指定域名禁止访问
                "domain:sina.com"]
            },
            {
            "type": "field",
            "outboundTag": "direct_connect",
            "domain": ["geosite:cn"],      // 国内主流网站的域名
            "ip": ["geoip:cn",             // 国内的 IP
                   "geoip:private"]       // 私有地址 IP，如路由器等
            }]
     }, 
    "mux": {
        "enabled": true 
    }
}
